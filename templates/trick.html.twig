{% extends 'base.html.twig' %}

{% block title %}SnowTricks{% endblock %}

{% block body %}

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('../img/jumbotron.jpg');height: 50vh;">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto" style="z-index: 1;">
                    <div class="site-heading">
                        <!-- Title -->
                        <h1 class="mt-4">{{ trick.name }}</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

  <!-- Page Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg">
        <div class="d-flex align-items-end">
        <!--image view-->
            <img class="img-fluid rounded mx-2" src="../img/Tricks/tricks.png" alt="">
            <img class="img-fluid rounded mx-2" src="../img/Tricks/tricks.png" alt="">
        <!--vidéo view-->
            <iframe class="mx-2" width="560" height="350" src="https://www.youtube.com/embed/V9xuy-rVj9w" title="YouTube video player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            <iframe width="560" height="350" src="https://www.youtube.com/embed/QMrelVooJR4" title="YouTube video player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        <hr>

        <!-- Post Content -->
        <p class="lead">{{ trick.description }}</p>


          <div class="row justify-content-center mt-5 mb-5">
              <div class="col-8">
                  <button type="button" class="btn btn-outline-info">Auteur :{{ trick.slug }}</button>
                  <button type="button" class="btn btn-outline-info">Date de création :{{ trick.createdAt|date('d-m-Y H:i') }}</button>
                  <button type="button" class="btn btn-outline-info">Mise à jour :{{ trick.updatedAt|date('d-m-Y H:i') }}</button>
              </div>
          </div>
        <hr>

        <!-- Comments Form -->
        <div class="card my-4">
          <h5 class="card-header">Commenter :</h5>
          <div class="card-body">
            <form>
              <div class="form-group">
                <textarea class="form-control" rows="3"></textarea>
              </div>
              <button type="#" class="btn btn-primary mt-3">Envoyer</button>
            </form>
          </div>
        </div>

          <hr>

        <!-- Single Comment -->
        {% for message in trick.messages %}

        <div class="media mb-4">
          <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
          <div class="media-body">
            <h5 class="mt-0">Pseudo</h5>
                            
                  <div>{{ message.content }}</div>
              
          </div>
        </div>
        {% endfor %}


            <div class="text-center mt-5">
                <button type="button" class="btn btn-outline-secondary">Voir plus de commentaires</button>
            </div>

        </div>

      </div>
      <!-- /.row -->
      </div>
    <!-- /.container -->
    </div>

{% endblock %}